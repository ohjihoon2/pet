			<div class="box_01" style="width: 690px; margin: 0 auto; border-bottom: 0px;">
				<!-- <h1>질문 내용</h1> -->
				<div id="box_01_02">
					<div class="content">
						<textarea rows="10" cols="30" id="vetContent" name="vetContent" style="width: 685px; height: 412px;"></textarea>
					</div>
				</div>
			</div>
	
			<article class="btn">
				<button id="btnRegist" class="btnRegist">저장하기</button>
			</article>
