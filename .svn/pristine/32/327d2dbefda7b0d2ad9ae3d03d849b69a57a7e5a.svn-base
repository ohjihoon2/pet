}
.main_goods_cont{
	width: 1200px;
    position: relative;
    margin: 0 auto;
    text-decoration: none;
}
.main_goods_tab ul li a {
	/* border: 1px solid blue; */
    display: block;
    height: 47px;
    /* width: 380px; */
    line-height: 45px;
    background-color: #fff;
    text-align: center;
    font-size: 16px;
    font-weight: 300;
    color: #838383;
    letter-spacing: -1px;
    text-decoration: none;
   /*  margin-left:-10px; */
    
}

.main_goods_tab {
    width: 100%;
    margin-bottom: 38px;
    border-top: 2px solid #170709;
    border-bottom: 1px solid #a1a3ae;
    
}
.main_goods_tab ul li a span {
    display: inline-block;
