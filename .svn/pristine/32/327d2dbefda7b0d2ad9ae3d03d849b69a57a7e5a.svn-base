.plan_tab {
    width: 100%;
    overflow: hidden;
    clear: both;
    margin-bottom: 28px;
}


.plan_tab a {		/* 강아지 | 고양이  */
    float: left;
    width: 50%;
    height: 56px;
    line-height: 54px;
    background: #f7f9fd;
    text-align: center;
    font-size: 18px;
    font-weight: 300;
    color: #3c465e;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border: 1px solid #d8dce5;
    border-width: 1px 1px 1px 0;
    }
a.dog_btn.on{
background: #373536;
