/*********** spinner start *************/

.wan-spinner {
  border: 1px solid #dddddd;
  display: inline-block;
}

.wan-spinner .minus,
.wan-spinner .plus,
.wan-spinner input {
  height: 30px;
  float: left;
  line-height: 30px;
  text-align: center;
  background-color: white;
}

.wan-spinner input {
  border: none;
  border-left: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
  padding:0px;
  margin: 0;
  width: 40px;
  height: 30px;
}

.wan-spinner .minus,
.wan-spinner .plus {
  color: #333333;
  cursor: pointer;
  text-decoration: none;
  width: 30px;
}


/*********** spinner end *************/
